{
  "rewrites": [
    { "source": "/api/quizzes/:sub+",          "destination": "/api/quizzes?sub=:sub" },
    { "source": "/api/results/:sub+",           "destination": "/api/results?sub=:sub" },
    { "source": "/api/users/:sub+",             "destination": "/api/users?sub=:sub" },
    { "source": "/api/assignments/:sub+",       "destination": "/api/assignments?sub=:sub" },
    { "source": "/api/notifications/:sub+",     "destination": "/api/notifications?sub=:sub" },
    { "source": "/api/questions/:sub+",         "destination": "/api/questions?sub=:sub" },
    { "source": "/api/certificates/:sub+",      "destination": "/api/certificates?sub=:sub" },
    { "source": "/((?!api(?:/|$)).*)",          "destination": "/index.html" }
  ]
}
